# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=sqlite:./database/kleinpaket.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_SECRET=your-session-secret-key-change-in-production

# Email Configuration (for password reset and team invitations)
SMTP_URL=smtp://username:password@smtp.gmail.com:587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@kleinpaket.com

# Client Configuration
CLIENT_URL=http://localhost:3000

# Demo Mode (set to true for development, false for production)
DEMO_MODE=true

# Rate Limiting
API_RATE_LIMIT=100
MAX_CALCULATIONS_FREE=3

# Optional: Stripe Configuration (for production payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Optional: File Storage (for bulk uploads)
STORAGE_URL=./uploads

